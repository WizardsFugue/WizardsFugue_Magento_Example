{
	"name":     "WizardsFugue/magento_example",
    "repositories": [
        {
            "type": "composer",
            "url": "http://packages.firegento.com"
        },
        {
            "type": "composer",
            "url": "http://packages.base.cotya.com/"
        }
    ],
	"autoload":{
        "files": [
            "./vendor/connect20/Mage_Core_Modules/app/code/core/Mage/Core/functions.php"
        ],
        "psr-0": {
            "": "src/"
        },
	    "classmap": [
                "vendor/connect20"
	    ]
	},
	"require":  {
	    "wizards-fugue/base": "dev-master",
        "connect20/mage_all_latest": "1.7.*",
        "symfony/console": "2.4.*",
        "symfony/finder": "2.4.*",
        "symfony/dom-crawler": "2.4.*",
        "symfony/css-selector": "2.4.*",
        "lisachenko/go-aop-php": "0.4.*",
        "magento-hackathon/magento-composer-installer": "dev-master#c054c00f07eae16b08e1d8fc3e4652b3b70163a4"
	},
    "require-dev": {
        "phpunit/phpunit": "3.7.*",
        "phpunit/phpunit-selenium":"*",
        "phpunit/dbunit":"*",
        "symfony/yaml":"*"

    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra":{
        "magento-deploystrategy": "none",
        "magento-root-dir": "not_used/",
        "magento-force": true
    }
}
